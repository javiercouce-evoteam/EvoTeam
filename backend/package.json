{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Pospon App",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "pre-commit": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "prepare": "cd .. && husky",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "8.0.0",
    "hpp": "^0.2.3",
    "morgan": "1.10.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "uuid": "^11.1.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "1.9.9",
    "@types/node": "22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.18.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  }
}
