#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Backend pre-commit checks
echo "🔍 Running pre-commit checks for backend..."

# Type checking
echo "📝 Type checking..."
pnpm --filter backend run type-check

# Linting
echo "🧹 Linting..."
pnpm --filter backend run lint

# Format checking
echo "💅 Format checking..."
pnpm --filter backend run format:check

echo "✅ All pre-commit checks passed!"