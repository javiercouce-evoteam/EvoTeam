{
	"scripts": {
		"clean": "pnpm clean:modules && pnpm clean:lock",
		"clean:modules": "rd /s /q node_modules 2>nul & rd /s /q apps\\web\\node_modules 2>nul & rd /s /q apps\\mobile\\node_modules 2>nul & rd /s /q packages\\ui\\node_modules 2>nul & rd /s /q backend\\node_modules 2>nul & echo Cleaned node_modules",
		"clean:lock": "del pnpm-lock.yaml 2>nul & echo Cleaned lock file",
		"clean:install": "pnpm clean && pnpm install",
		"fresh": "pnpm clean:install",
		"dev": "pnpm --filter web dev",
		"build": "pnpm --filter web build",
		"build:all": "pnpm -r build",
		"prepare": "husky"
	},
	"dependencies": {
		"@babel/core": "^7.28.0",
		"@tamagui/babel-plugin": "1.132.9",
		"@tamagui/config": "1.132.9",
		"@tamagui/core": "1.132.9",
		"@tamagui/stacks": "1.132.9",
		"@tamagui/text": "1.132.9",
		"babel-loader": "^10.0.0",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"tamagui": "1.132.9"
	},
	"pnpm": {
		"overrides": {
			"react": "=19.0.0",
			"react-dom": "=19.0.0",
			"@types/react": "^19.0.0",
			"@types/react-dom": "^19.0.0",
			"tamagui": "=1.132.9",
			"@tamagui/core": "=1.132.9",
			"@tamagui/web": "=1.132.9",
			"@tamagui/config": "=1.132.9",
			"@tamagui/babel-plugin": "=1.132.9"
		},
		"peerDependencyRules": {
			"ignoreMissing": [
				"@types/react",
				"@types/react-dom"
			]
		}
	}
}
